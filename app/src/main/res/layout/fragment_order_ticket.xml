        app:cardCornerRadius="10dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".order_ticket.OrderTicketFragment">

            <!--        <TextView
                        android:layout_width="match_parent"
